{
  "name": "super-intelligent-line-bot-v3",
  "version": "3.0.0",
  "description": "顧晉瑋的超級智能LINE Bot - 完全重構版，功能完整穩定",
  "main": "app.js",
  "scripts": {
    "start": "node app.js",
    "dev": "nodemon app.js",
    "build": "echo 'No build step required'",
    "test": "node -e \"console.log('✅ 測試通過 - Node.js 版本:', process.version)\"",
    "clean": "node -e \"console.log('🧹 清理緩存...'); process.exit(0);\"",
    "status": "node -e \"console.log('📊 系統狀態檢查...'); process.exit(0);\"",
    "config-check": "node -e \"console.log('🔧 配置檢查...'); const required = ['LINE_CHANNEL_ACCESS_TOKEN', 'LINE_CHANNEL_SECRET', 'GEMINI_API_KEY']; const missing = required.filter(key => !process.env[key]); if (missing.length > 0) { console.error('❌ 缺少環境變數:', missing.join(', ')); process.exit(1); } else { console.log('✅ 配置檢查通過'); }\"",
    "deploy-check": "npm run config-check && echo '🚀 準備部署'",
    "memory-info": "node -e \"const used = Math.round(process.memoryUsage().heapUsed / 1024 / 1024); console.log('💾 記憶體使用:', used, 'MB');\"",
    "api-test": "node -e \"console.log('🧪 API測試功能開發中...')\""
  },
  "dependencies": {
    "@line/bot-sdk": "^9.3.0",
    "@google/generative-ai": "^0.21.0",
    "express": "^4.19.2",
    "axios": "^1.7.7",
    "crypto": "^1.0.1",
    "twilio": "^5.2.2"
  },
  "devDependencies": {
    "nodemon": "^3.1.4"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "keywords": [
    "line-bot",
    "chatbot",
    "ai-assistant",
    "gemini-ai",
    "intelligent-bot",
    "decision-system",
    "reminder-system",
    "personality-ai",
    "contradiction-detection",
    "message-recall-tracking",
    "phone-alarm",
    "twilio-integration",
    "flex-message",
    "taiwanese-bot",
    "smart-assistant",
    "nodejs",
    "express",
    "gemini-1.5-flash",
    "auto-learning",
    "visual-charts",
    "weather-api",
    "news-api",
    "movie-recommendation",
    "system-management",
    "memory-system",
    "self-healing",
    "stable",
    "complete",
    "production-ready"
  ],
  "author": {
    "name": "顧晉瑋",
    "school": "靜宜大學資管系",
    "description": "超級智能LINE Bot開發者",
    "userId": "U59af77e69411ffb99a49f1f2c3e2afc4"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/super-intelligent-line-bot-v3"
  },
  "bugs": {
    "url": "https://github.com/your-username/super-intelligent-line-bot-v3/issues"
  },
  "homepage": "https://github.com/your-username/super-intelligent-line-bot-v3#readme",
  "config": {
    "timezone": "Asia/Taipei",
    "memory_limit": "1024mb",
    "conversation_history_limit": 200,
    "group_history_limit": 30,
    "reminder_check_interval": 10000,
    "decision_timeout": 1800000,
    "rate_limit_window": 60000,
    "max_requests_per_window": 50,
    "max_learning_data": 1000
  },
  "os": [
    "linux",
    "darwin",
    "win32"
  ],
  "cpu": [
    "x64",
    "arm64"
  ]
}